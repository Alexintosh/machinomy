{
  "name": "machinomy",
  "version": "1.6.0",
  "description": "Micropayments powered by Ethereum",
  "author": "Sergey Ukustov <sergey.ukustov@machinomy.com>",
  "license": "Apache-2.0",
  "keywords": [
    "micropayments",
    "ethereum",
    "express"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/machinomy/machinomy.git"
  },
  "scripts": {
    "prepublish": "yarn lint && yarn build",
    "lint": "tslint --format stylish --project . --exclude 'node_modules/**/*.ts'",
    "build": "tsc --project tsconfig.json",
    "pretest": "yarn lint && tsc --project tsconfig.json --outDir .",
    "test": "yarn test:unit",
    "test:unit": "NODE_ENV=test mocha",
    "test:db:nedb": "ENGINE_NAME=nedb yarn run test:unit",
    "test:db:mongo": "ENGINE_NAME=mongo yarn run test:unit",
    "test:db:postgresql": "ENGINE_NAME=postgresql yarn run test:unit",
    "test:db:all": "yarn pretest && yarn run test:db:nedb && yarn run test:db:mongo && yarn run test:db:postgresql",
    "test:integration": "yarn pretest && NODE_ENV=test mocha integration_test/**/*.test.js",
    "migrate": "db-migrate up"
  },
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "bin": {
    "machinomy": "dist/bin/machinomy.js"
  },
  "types": "dist/index.d.ts",
  "files": [
    "dist/"
  ],
  "dependencies": {
    "@machinomy/contracts": "^4.0.5",
    "@machinomy/types-truffle-contract": "https://github.com/machinomy/types-truffle-contract",
    "@types/bignumber.js": "^4.0.2",
    "@types/body-parser": "^1.16.4",
    "@types/commander": "^2.9.1",
    "@types/debug": "^0.0.30",
    "@types/expect": "^1.20.2",
    "@types/express": "^4.0.36",
    "@types/nedb": "^1.8.3",
    "@types/request": "^2.0.13",
    "@types/request-promise-native": "^1.0.11",
    "@types/uuid": "^3.4.3",
    "bignumber.js": "^4.1.0",
    "commander": "^2.9.0",
    "debug": "^3.1.0",
    "ethereumjs-util": "^5.1.2",
    "events": "^2.0.0",
    "homedir": "https://github.com/ukstv/node-homedir",
    "nedb": "^1.8.0",
    "prompt": "^1.0.0",
    "request": "^2.76.0",
    "request-promise-native": "^1.0.5",
    "types-bn": "^0.0.1",
    "types-ethereumjs-util": "^0.0.6",
    "types-rlp": "^0.0.1",
    "uuid": "^3.2.1",
    "web3": "^0.20.1",
    "web3-typescript-typings": "^0.9.7",
    "whatwg-fetch": "^2.0.3"
  },
  "optionalDependencies": {
    "mongodb": "^2.2.31",
    "pg": "^7.4.1"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.43",
    "@types/nock": "^8.2.1",
    "@types/node": "^9.4.0",
    "@types/sinon": "^4.1.3",
    "@types/tmp": "^0.0.33",
    "body-parser": "^1.15.2",
    "coveralls": "^3.0.0",
    "db-migrate": "^0.10.2",
    "db-migrate-pg": "^0.3.0",
    "expect": "^22.3.0",
    "express": "^4.14.0",
    "ganache-cli": "^6.0.3",
    "istanbul": "^0.4.5",
    "mocha": "^5.0.0",
    "nock": "^9.0.9",
    "sinon": "^4.1.5",
    "tmp": "0.0.33",
    "tslint": "^5.5.0",
    "tslint-config-standard": "^7.0.0",
    "typescript": "2.5.3"
  }
}
